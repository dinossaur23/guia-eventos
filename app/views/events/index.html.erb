<header>
  <nav class="top-nav" style="background-color: #b1fbe72e;">
    <div class="nav-wrapper">
        <ul class="hide-on-med-and-down" style="margin-left: 260px;">
          <li style="width: 95%;"><div class="input-field col s6 s12 black-text">
            <i class="green-text material-icons prefix">search</i>
            <input type="text" class="blue-text" placeholder="Buscar Eventos" >
          </div></li>
        </ul>
    </div>
  </nav>
  <ul style="width:250px; margin-top:65px;" class="side-nav fixed">
    <li><a href="/events/my">Meus Eventos</a></li>
    <li><a href="#">Eventos com Interesse</a></li>
    <li><a href="#">Festas</a></li>
    <li><a href="#">Gastronomia</a></li>
    <li><a href="#">Feiras</a></li>
    <li><a href="#">Festivais</a></li>
    <li><a href="#">Adoções</a></li>
  </ul>
  <div class="display-4" style="margin-left: 260px;">
    <center><header><h3 class="display-4">Principais Eventos</h3></header></center><br>
    <div class="row center-cols">
      <% @events.each do |event| %>
        <div class="col m4">
          <div class="card">
            <div class="card-image">
              <span class="card-title"><%= event.name %></span>
            </div>
            <div class="card-content">
              <p>Endereço: <%=event.address%></p>
              <p>Número: <%=event.number%></p>
              <% if logged_in? %>
              <p> Preço: R$ <%= event.price %></p>
              <% else %>
                Preço: <font color="green">FAÇA LOGIN</font>
              <% end %></p>
              <p>Data: <%=event.date.strftime('%d/%m/%Y') %></p>
              <p>Hora de início: <%=event.initial_time.strftime('%H:%M')%></p>
              <p>Hora de fim: <%=event.final_time.strftime('%H:%M')%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</header>
